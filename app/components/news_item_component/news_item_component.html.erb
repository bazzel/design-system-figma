<a
  class="flex flex-col max-w-md gap-5 p-4 transition rounded shadow-sm  hover:shadow-lg group bg-background-50"
  href='#'
>
  <div class="relative">
    <%= image_tag(@image, class: "aspect-video rounded-md") %>
    <div class="absolute right-3 top-3">
      <%= render(TagComponent.new(label: "Nieuws", icon: "newspaper")) %>
    </div>
  </div>
  <div>
    <div class="mb-2">
      <%= render(SubtitleComponent.new(title: @title, level: 2)) %>
    </div>
    <p><%= content %></p>
  </div>
  <div class="flex flex-row items-center gap-5">
    <%= render(AvatarComponent.new(image: @avatar)) %>
    <div class="flex flex-col grow">
      <strong><%= @author %></strong>
      <div><%= @role %></div>
    </div>
    <%= inline_svg_tag "icons/solid/arrows/caret-right.svg",
    class: "w-4 h-4 group-hover:text-primary-400" %>
  </div>
</a>
